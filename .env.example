# EMF Local Development Environment Variables
# Copy this file to .env and customize as needed

# ===========================================
# Database Configuration
# ===========================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=emf_control_plane
DB_USERNAME=emf
DB_PASSWORD=emf

# ===========================================
# Redis Configuration
# ===========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ===========================================
# Kafka Configuration
# ===========================================
# Use port 9094 for external access from host machine
KAFKA_BOOTSTRAP_SERVERS=localhost:9094

# Enable/disable Kafka event publishing
KAFKA_EVENTS_ENABLED=true

# ===========================================
# OIDC Configuration (Keycloak)
# ===========================================
OIDC_ISSUER_URI=http://localhost:8180/realms/emf
OIDC_JWKS_URI=http://localhost:8180/realms/emf/protocol/openid-connect/certs

# ===========================================
# Application Configuration
# ===========================================
SERVER_PORT=8080
SECURITY_ENABLED=true

# ===========================================
# Logging
# ===========================================
LOG_LEVEL_EMF=DEBUG
LOG_LEVEL_SPRING_WEB=INFO
LOG_LEVEL_SPRING_SECURITY=DEBUG

# ===========================================
# Flyway
# ===========================================
FLYWAY_ENABLED=true
FLYWAY_BASELINE_ON_MIGRATE=true
